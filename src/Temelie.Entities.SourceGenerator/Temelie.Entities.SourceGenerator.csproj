<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <NoWarn>1701;1702;NU5128</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.Common" Version="4.10.0" PrivateAssets="all" />
    <PackageReference Include="System.Text.Json" Version="8.0.4" PrivateAssets="all" IncludeInPackage="true" />
    <PackageReference Include="System.Text.Encodings.Web" Version="8.0.0" PrivateAssets="all" IncludeInPackage="true" />
    <PackageReference Include="Microsoft.Bcl.AsyncInterfaces" Version="8.0.0" PrivateAssets="all" IncludeInPackage="true" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Temelie.Database.Models\Temelie.Database.Models.csproj" OutputItemType="Analyzer" />
  </ItemGroup>

  <Import Project="..\SourceGenerator\SourceGenerator.projitems" Label="Shared" />

  <Target Name="AddProjectRefDlls" BeforeTargets="_GetPackageFiles">
    <ItemGroup>
      <None Include="$(OutputPath)\Temelie.Database.Models.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    </ItemGroup>
  </Target>

  <Import Project="..\..\analyzer.targets" Condition="Exists('..\..\analyzer.targets')" />

</Project>
